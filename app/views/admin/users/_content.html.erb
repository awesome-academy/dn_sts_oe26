  <%= f.label t ".name" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label t ".email" %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label t ".password" %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label t ".confi" %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <div class="col">
    <%= f.radio_button :gender, User.genders.key(User.genders[:male]), class: "col-sm-1" %>
    <%= t ".male" %>
    <%= f.radio_button :gender, User.genders.key(User.genders[:female]), class: "col-sm-1" %>
    <%= t ".female" %>
    <%= f.radio_button :gender, User.genders.key(User.genders[:other]), class: "col-sm-1" %>
    <%= t ".other" %>
  </div>

  <%= f.label t(".birthday"), class: "col" %>
  <%= f.date_field :birthday, class: "form-control" %>

  <%= f.label t ".company" %>
  <%= f.text_field :company, class: "form-control" %>

  <%= f.label t ".gradution" %>
  <%= f.text_field :gradution, class: "form-control" %>

  <%= f.label t ".university" %>
  <%= f.text_field :university, class: "form-control" %>

  <%= f.label t ".address" %>
  <%= f.text_field :address, class: "form-control" %>

  <%= f.label t ".deleted" %>
  <%= f.select :deleted, options_for_select(Settings.type_deleted, @user.deleted), {}, {class: "form-control"} %>

  <div class="col">
    <%= f.radio_button :role, User.roles.key(User.roles[:trainee]), class: "col-sm-1" %>
    <%= t ".trainee" %>
    <%= f.radio_button :role, User.roles.key(User.roles[:trainer]), class: "col-sm-1" %>
    <%= t ".trainer" %>
    <%= f.radio_button :role, User.roles.key(User.roles[:admin]), class: "col-sm-1" %>
    <%= t ".admin" %>
  </div>
