<td>
  <div class="card-profile">
    <%= image_tag("avatar.png", alt: "card image") %>
    <div class="card-body">
      <h5 class="card-title">
        <%= link_to user.name, "#" %>
      </h5>
      <p class="card-text">
        <%= t ".email" %>: <%= user.email %>
      </p>
      <p class="card-text">
        <%= t(".birthday", day: user.birthday) %>
      </p>
      <p class="card-text">
        <%= t(".university", university: user.university) %>
      </p>
      <div class="row-sm-2 btn-card", id="card-btn">
        <% unless user.deleted? %>
          <%= button_to t(".btn_delete"), admin_user_path(user),
            method: :delete, class: "btn btn-outline-danger float-left",
            data: { confirm: t(".confirm_delete", name: user.name) } %>
        <% end %>
        <%= link_to t(".update"), edit_admin_user_path(user), class: "btn btn-outline-success float-right" %>
      </div>
    </div>
  </div>
</td>
