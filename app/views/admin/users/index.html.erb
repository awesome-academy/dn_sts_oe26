<% provide(:title, t(".title")) %>
<div class="container">
  <div class="search" >
    <%= search_form_for @q, url: search_admin_users_path, html: { method: :post } do |f| %>
    <div class="row">
      <div class="col-sm-6">
        <%= f.search_field :name_or_email_cont, class: "form-control", placeholder: "search by name or email" %>
      </div>
    </div>
    <%= f.submit t(".search"), class: "btn btn-success" %>
  <% end %>
  </div>
  <div class="new_user">
    <%= link_to t(".new_user"), new_admin_user_path %>
  </div>
  <%= sort_link(@q, :name) %>
  <table class="center">
    <%= render @users %>
  </table>
  <%= will_paginate(@users, :params => { q: params[:q] })  %>
</div>
