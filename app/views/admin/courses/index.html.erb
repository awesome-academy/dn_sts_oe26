<% provide(:title, t(".title")) %>
<div class="container">
  <div class="search" >
    <%= search_form_for @q, url: search_admin_courses_path, html: { method: :post } do |f| %>
    <div class="row">
      <div class="col-sm-6">
        <%= f.search_field :name_cont, class: "form-control", placeholder: "search by name..." %>
      </div>
    </div>
    <%= f.submit t(".search"), class: "btn btn-success" %>
    <% end %>
  </div>
  <div class="new_course">
    <%= link_to t(".create_course"), new_admin_course_path %>
  </div>
  <table class="center">
    <%= render @courses %>
  </table>
  <%= will_paginate %>
</div>
